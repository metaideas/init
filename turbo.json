{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["NODE_ENV", "CI"],
  "concurrency": "15",
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^codegen"],
      "env": [
        "AUTH_SECRET",

        "DATABASE_URL",
        "DATABASE_AUTH_TOKEN",

        "EMAIL_FROM",

        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",

        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",

        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",

        "REDIS_URL",

        "RESEND_API_KEY",

        "SENTRY_AUTH_TOKEN",
        "SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT"
      ]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "migrate": {
      "cache": false
    },
    "push": {
      "cache": false,
      "interactive": true
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["codegen", "^codegen"]
    },
    "codegen": {
      "dependsOn": ["typegen"]
    },
    "typegen": {},
    "//#analyze": {},
    "//#check": {},
    "//#check:monorepo": {},
    "//#fix": {},
    "//#fix:monorepo": {},
    "//#format": {}
  },
  "ui": "tui"
}
