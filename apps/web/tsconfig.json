{
  "extends": "@tooling/tsconfig/base",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
      "content-collections": ["./.content-collections/generated"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": [
    ".next/types/**/*.ts",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.ts",
    "scripts",
    "src",
    "reset.d.ts"
  ]
}
