    "@init/observability": "workspace:*",
    "@init/security": "workspace:*",
    "@init/utils": "workspace:*",
    "@trpc/server": "11.7.1",
    "hono": "4.10.5",
    "hono-rate-limiter": "0.4.2",
    "superjson": "2.2.5"
  },
  "devDependencies": {
    "@tooling/tsconfig": "workspace:*",
