{
  "name": "api",
  "private": true,
  "type": "module",
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.ts"
      }
    }
  },
  "scripts": {
    "build:docker": "docker build -t init-api -f Dockerfile ../..",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "bump:deps": "bun update --interactive",
    "dev": "bun --hot src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "typegen": "tsdown",
    "typegen:watch": "tsdown --watch"
  },
  "dependencies": {
    "@hono/trpc-server": "0.4.0",
    "@hono/zod-validator": "0.7.3",
    "@init/auth": "workspace:*",
    "@init/db": "workspace:*",
    "@init/env": "workspace:*",
    "@init/kv": "workspace:*",
    "@init/observability": "workspace:*",
    "@init/security": "workspace:*",
    "@init/utils": "workspace:*",
    "@trpc/server": "11.6.0",
    "hono": "4.10.1",
    "superjson": "2.2.2"
  },
  "devDependencies": {
    "@tooling/helpers": "workspace:*",
    "@tooling/tsconfig": "workspace:*",
    "@types/bun": "1.3.0",
    "tsdown": "0.15.8",
    "typescript": "catalog:"
  }
}
