{
  "name": "api",
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.ts"
      }
    }
  },
  "scripts": {
    "build:docker": "docker build -t init-api -f Dockerfile ../..",
    "check": "biome check --write",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "deps:check": "taze -l",
    "deps:update": "taze -lw",
    "dev": "bun --hot src/index.ts",
    "format": "biome format --write",
    "lint": "biome lint --fix",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "typegen:client": "tsup src/client.ts --dts-only",
    "typegen:client:watch": "tsup src/client.ts --dts-only --watch"
  },
  "dependencies": {
    "@hono/trpc-server": "0.4.0",
    "@hono/zod-validator": "0.7.0",
    "@init/auth": "workspace:*",
    "@init/db": "workspace:*",
    "@init/env": "workspace:*",
    "@init/kv": "workspace:*",
    "@init/observability": "workspace:*",
    "@init/security": "workspace:*",
    "@init/utils": "workspace:*",
    "@trpc/server": "11.4.3",
    "drizzle-zod": "0.8.2",
    "hono": "4.8.3",
    "superjson": "2.2.2"
  },
  "devDependencies": {
    "@tooling/helpers": "workspace:*",
    "@tooling/tsconfig": "workspace:*",
    "@types/bun": "1.2.17",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  }
}
