{
  "name": "api",
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.ts"
      }
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outdir=dist",
    "check": "biome check --write .",
    "clean": "git clean -xdf .cache .turbo .wrangler dist node_modules",
    "dev": "tsx watch src/index.ts",
    "format": "biome format --write .",
    "lint": "biome lint --fix .",
    "start": "node dist",
    "typecheck": "tsc --noEmit",
    "typegen:client": "tsup src/client.ts --dts-only",
    "typegen:client:watch": "tsup src/client.ts --dts-only --watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/trpc-server": "0.3.4",
    "@hono/zod-validator": "0.4.3",
    "@init/auth": "workspace:*",
    "@init/db": "workspace:*",
    "@init/env": "workspace:*",
    "@init/observability": "workspace:*",
    "@init/queue": "workspace:*",
    "@init/utils": "workspace:*",
    "@trpc/server": "catalog:",
    "esbuild": "^0.25.4",
    "hono": "catalog:",
    "pino": "catalog:",
    "superjson": "catalog:"
  },
  "devDependencies": {
    "@tooling/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
