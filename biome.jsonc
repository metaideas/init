{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["adamantite"],
  "files": {
    "includes": [
      "**",
      // Ignore route tree generated files
      "!**/routeTree.gen.ts",
      // Ignore Convex generated files
      "!packages/backend/src/_generated"
    ]
  },
  "linter": {
    "rules": {
      "nursery": {
        "noImportCycles": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],

      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          },

          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
