{
  "name": "@init/email",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./client": "./src/client.ts",
    "./templates/*": "./src/templates/*.tsx"
  },
  "scripts": {
    "build": "email build --dir src/templates",
    "check": "biome check --write",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "deps:check": "taze -l",
    "deps:update": "taze -lw",
    "dev": "email dev --dir src/templates --port 8081",
    "export": "email export --dir src/templates",
    "format": "biome format --write",
    "lint": "biome lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@init/env": "workspace:*",
    "@init/observability": "workspace:*",
    "@init/queue": "workspace:*",
    "@init/utils": "workspace:*",
    "@react-email/components": "0.1.1",
    "@react-email/render": "1.1.3",
    "resend": "4.6.0"
  },
  "devDependencies": {
    "@tooling/tsconfig": "workspace:*",
    "@types/react": "19.0.10",
    "react": "19.0.0",
    "react-email": "4.0.17",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "react": "*"
  }
}
