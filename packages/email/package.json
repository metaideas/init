    "@react-email/render": "2.0.0",
    "date-fns": "4.1.0",
    "resend": "6.5.2"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.0.5",
    "@tooling/tsconfig": "workspace:*",
    "@types/react": "catalog:",
    "react": "catalog:",
    "react-email": "5.0.5",
    "typescript": "catalog:"
  }
