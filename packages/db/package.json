{
  "name": "@init/db",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./helpers": "./src/helpers.ts",
    "./schema": "./src/schema.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "bump:deps": "bun update --interactive",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "bun --bun drizzle-kit studio",
    "generate": "bun --bun drizzle-kit generate",
    "migrate": "bun --bun drizzle-kit migrate",
    "push": "bun --bun drizzle-kit push",
    "reset": "bun --bun run ./scripts/reset.ts",
    "seed": "bun --bun run ./scripts/seed.ts",
    "typecheck": "adamantite typecheck"
  },
  "dependencies": {
    "@init/env": "workspace:*",
    "@init/observability": "workspace:*",
    "@init/utils": "workspace:*",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3"
  },
  "devDependencies": {
    "@tooling/tsconfig": "workspace:*",
    "drizzle-kit": "0.31.8",
    "drizzle-seed": "0.3.1",
    "postgres": "3.4.8",
    "typescript": "5.9.3"
  }
}
