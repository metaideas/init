{
  "name": "init",
  "private": true,
  "workspaces": ["apps/*", "packages/*", "tooling/*"],
  "scripts": {
    "boundaries": "turbo boundaries",
    "build": "turbo build",
    "check": "turbo check",
    "clean": "turbo clean && git clean -xdf .cache .turbo dist node_modules",
    "db:migrate": "turbo --filter @init/db migrate",
    "db:push": "turbo --filter @init/db push",
    "db:studio": "turbo --filter @init/db studio",
    "deps:check": "taze -rl",
    "deps:list": "syncpack list",
    "deps:mismatch": "syncpack list-mismatches --types dev,prod",
    "deps:sync": "syncpack fix-mismatches --types dev,prod",
    "deps:sync:prompt": "syncpack prompt --types dev,prod",
    "deps:update": "taze -rlw",
    "dev": "turbo dev",
    "docker:down": "docker compose -f infra/local/docker-compose.yml down",
    "docker:up": "docker compose -f infra/local/docker-compose.yml up -d",
    "format": "turbo format",
    "generate": "turbo generate",
    "lint": "turbo lint",
    "lint:repo": "sherif --fix",
    "start": "turbo run start",
    "typecheck": "turbo typecheck --continue",
    "workspace:add": "tsx scripts/add.ts",
    "workspace:graph": "tsx scripts/graph.ts",
    "workspace:remove": "tsx scripts/remove.ts",
    "workspace:replace": "tsx scripts/replace.ts",
    "workspace:setup": "tsx scripts/setup.ts",
    "workspace:update": "tsx scripts/update.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@turbo/gen": "2.5.3",
    "dependency-cruiser": "16.10.2",
    "shadcn": "^2.6.3",
    "sherif": "1.5.0",
    "syncpack": "13.0.4",
    "taze": "19.1.0",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "turbo": "2.5.3",
    "typescript": "5.8.3",
    "@types/bun": "1.2.16"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "node": ">=22"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@sentry/cli",
    "@tailwindcss/oxide",
    "@upstash/qstash-cli",
    "bufferutil",
    "core-js",
    "core-js-pure",
    "docs",
    "dtrace-provider",
    "es5-ext",
    "esbuild",
    "extension",
    "msgpackr-extract",
    "msw",
    "protobufjs",
    "sharp",
    "spawn-sync",
    "utf-8-validate"
  ]
}
